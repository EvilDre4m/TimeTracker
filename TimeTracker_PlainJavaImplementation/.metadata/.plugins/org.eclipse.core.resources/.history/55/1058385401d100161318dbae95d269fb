package at.fhv.timetracker.project; 

import java.sql.*;
import java.util.ArrayList;

public class ProjectDAO {
	
	Connection c = null;
	Statement stmt = null;
	
	private void init(){
		try {
			Class.forName("org.sqlite.JDBC");
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
		
		try {
			c = DriverManager.getConnection("jdbc:sqlite:timetracker.db");
			c.setAutoCommit(true);
			stmt = c.createStatement();
			//TODO: String for creating table
			String sqlCreateTable = "CREATE TABLE IF NOT EXISTS Projects" + 
									"(ID	PRIMARY KEY	NOT NULL, " +
									"OWNINGUSER		INTEGER	NOT NULL, " + /*Fuck foreign keys ;-)*/
									"DESCRIPTION	TEXT	NOT NULL" +
									"NAME			TEXT	NOT NULL)";
			stmt.executeUpdate(sqlCreateTable);
			stmt.close();
			stmt = null;
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	
